<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AsianGameApps.Resources.Pages.Comp.Introduct"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Introduct">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="FangZhengKaiTi" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <ImageButton
                    x:Name="BackButton"
                    Margin="10"
                    Clicked="BackButton_Clicked"
                    HeightRequest="32"
                    Source="left_arrow.png"
                    WidthRequest="32" />
                <Label
                    x:Name="TitleLabel"
                    FontSize="38"
                    HorizontalOptions="Center"
                    LineBreakMode="WordWrap"
                    Text="{Binding}" />
            </HorizontalStackLayout>
            <Label x:Name="Info" Margin="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>