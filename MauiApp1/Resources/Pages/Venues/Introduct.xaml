<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.Resources.Pages.Venues.Introduct"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="NoTitle">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <ImageButton
                    x:Name="BackButton"
                    Margin="10"
                    Clicked="BackButton_Clicked"
                    HeightRequest="32"
                    Source="left_arrow.png"
                    WidthRequest="32" />
                <Label
                    x:Name="TitleLabel"
                    FontSize="38"
                    HorizontalOptions="Center"
                    LineBreakMode="WordWrap"
                    Text="{Binding}" />
            </HorizontalStackLayout>
            <Button
                x:Name="ToMap"
                Margin="10"
                Clicked="ToMap_Clicked"
                FontSize="40"
                HeightRequest="64"
                HorizontalOptions="Start"
                Text="路线"
                WidthRequest="130" />
            <Label x:Name="Info" Margin="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>